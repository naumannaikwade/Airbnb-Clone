<% layout("/layouts/boilerplate") %>

<body>
  <!-- <h3>All listings</h3> -->
  <!-- <form action="/listings/new" method="get">
      <button>Create a new Listing</button>
    </form> -->
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      margin-bottom: 1rem;
    }

    .filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 0.75rem;
      height: 3rem;
      padding: 0.7rem;
      display: flex;
      align-items: center;
    }
  </style>
  <div id="filters">
    <div class="filter">
      <a href="/listings" class="text-dark text-decoration-none">
        <div><i class="fa-solid fa-compass"></i></div>

        <p>All</p>
      </a>
    </div>
    <div class="filter" data-category="Amazing views">
      <a
        href="/listings?category=Amazing views"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-mountain-sun"></i></div>

        <p>Amazing views</p>
      </a>
    </div>
    <div class="filter" data-category="Beach">
      <a href="/listings?category=Beach" class="text-dark text-decoration-none">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>

        <p>Beach</p>
      </a>
    </div>
    <div class="filter" data-category="Luxe">
      <a href="/listings?category=Luxe" class="text-dark text-decoration-none">
        <div><i class="fa-solid fa-bell-concierge"></i></div>
        <p>Luxe</p>
      </a>
    </div>
    <div class="filter" data-category="Hanoks">
      <a
        href="/listings?category=Hanoks"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-menorah"></i></div>

        <p>Hanoks</p>
      </a>
    </div>
    <div class="filter" data-category="Cases Particular">
      <a
        href="/listings?category=Cases Particular"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-building"></i></div>

        <p>Cases Particular</p>
      </a>
    </div>
    <div class="filter" data-category="Minsus">
      <a
        href="/listings?category=Minsus"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-torii-gate"></i></div>

        <p>Minsus</p>
      </a>
    </div>
    <div class="filter" data-category="Hotel">
      <a href="/listings?category=Hotel" class="text-dark text-decoration-none">
        <div><i class="fa-solid fa-hotel"></i></div>

        <p>Hotel</p>
      </a>
    </div>
    <div class="filter" data-category="Warehouse">
      <a
        href="/listings?category=Warehouse"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-warehouse"></i></div>

        <p>Warehouse</p>
      </a>
    </div>
    <div class="filter" data-category="Pet House">
      <a
        href="/listings?category=Pet House"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-paw"></i></div>

        <p>Pet House</p>
      </a>
    </div>
    <div class="filter" data-category="International">
      <a
        href="/listings?category=International"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-globe"></i></div>

        <p>International</p>
      </a>
    </div>
    <div class="filter" data-category="Nature">
      <a
        href="/listings?category=Nature"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-binoculars"></i></div>

        <p>Nature</p>
      </a>
    </div>
    <!-- <div class="filter" data-category="Satellite">
      <a
        href="/listings?category=Satellite"
        class="text-dark text-decoration-none"
      >
        <div><i class="fa-solid fa-satellite"></i></div>

        <p>Satellite</p>
      </a>
    </div> -->

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <label class="form-check-label" for="switchCheckDefault"
          >Display total after taxes</label
        >
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
      </div>
    </div>

    <% if (allListings.length === 0) { %>
    <div class="w-100 text-center mt-4">
      <h5>No listings found matching your search.</h5>
    </div>
    <% } %>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){%>
    <a href="/listings/<%= listing._id%>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />

        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%=listing.title%> </b><br />
            &#8377; <%=listing.price.toLocaleString("en-IN")%> / night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>

    <% } %>
  </div>
</body>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
