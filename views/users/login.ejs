<%- layout("/layouts/boilerplate") %>

<style>
  .login-form {
    border-radius: 0.75rem;
    padding: 1.5rem;
    background: white;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .form-control {
    border-radius: 0.5rem;
    padding: 0.75rem;
  }

  .form-label {
    font-weight: 500;
  }

  .btn-dark {
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
  }

  .valid-feedback, .invalid-feedback {
    font-size: 0.85rem;
  }

  /* Large devices (≥992px) */
  @media (min-width: 992px) {
    .login-form {
      margin-bottom: 2rem;
    }
    .form-control {
      font-size: 1rem;
    }
    .form-label {
      font-size: 1rem;
    }
    .btn-dark {
      font-size: 1rem;
      min-width: 120px;
    }
    .mb-3 {
      margin-bottom: 1.5rem !important;
    }
  }

  /* Medium devices (576px–991px) */
  @media (min-width: 576px) and (max-width: 991px) {
    .login-form {
      margin: 0 auto 1.5rem;
      max-width: 500px;
      padding: 1.25rem;
    }
    .form-control {
      font-size: 0.95rem;
      padding: 0.6rem;
    }
    .form-label {
      font-size: 0.95rem;
    }
    .btn-dark {
      font-size: 0.9rem;
      min-width: 100px;
    }
    .mb-3 {
      margin-bottom: 1.25rem !important;
    }
  }

  /* Small devices (<576px) */
  @media (max-width: 575px) {
    .login-form {
      margin: 0 auto 1rem;
      max-width: 100%;
      padding: 1rem;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .form-label {
      font-size: 0.9rem;
    }
    .btn-dark {
      font-size: 0.85rem;
      width: 100%;
      padding: 0.5rem;
    }
    .mb-3 {
      margin-bottom: 1rem !important;
    }
  }
</style>

<div class="row mt-3">
  <div class="col-12 col-lg-6 offset-lg-3 login-form">
    <h1>Login on Wanderlust</h1>
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter your username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Please enter Username</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter your password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Please enter Password</div>
      </div>

      <button class="btn btn-dark">Login</button>
    </form>
  </div>
</div>